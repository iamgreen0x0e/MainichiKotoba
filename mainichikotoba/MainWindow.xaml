<Window x:Class="mainichikotoba.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525"
        WindowStyle="None"
        IsHitTestVisible="True"
        AllowsTransparency="True">
    <Window.Background>
        <SolidColorBrush Opacity="0" Color="White"/>
    </Window.Background>
    <Window.Resources>
        <SolidColorBrush x:Key="Transparent" Color="#00000000"/>
        <SolidColorBrush x:Key="Black" Color="Black"/>
    </Window.Resources>
    <Grid>
        <Label Height="106" Margin="49,150,52,94" x:Name="lblHeading" FontSize="35"
       RenderTransformOrigin="0.5, 0.5" Content="漢字は難しいです。">
            <Label.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="1" 
                      Color="Green"/>
            </Label.Effect>
            <Label.RenderTransform>
                <RotateTransform Angle="0"/>
            </Label.RenderTransform>
        </Label>

    </Grid>
</Window>
